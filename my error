import pygame
import sys


class Newgame:
    def __init__(self):
        pygame.init()
        self.screen = pygame.display.set_mode((800, 640))
        pygame.display.set_caption("Newgame")
        while True:
            for event in pygame.event.get():
                    if event.type == pygame.QUIT:
                        sys.exit()
                        pygame.quit()



if __name__ == "__main__":
    Ng = Newgame()

