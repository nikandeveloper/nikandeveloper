import pygame
import sys

class Newgame :
    def __init__(self):
        pygame.init()
        self.screen = pygame.display.set_mode((800,640))
        pygame.display.set_caption("Newgame")
        def run_game(self):
            while True:

                for event in pygame.event.get():
                    if event.type == pygame.QUIT:
                        sys.exit()

                pygame.display.flip() 
if __name__ == "__main__":

    Ng = Newgame()
    Ng.run_game()                       
